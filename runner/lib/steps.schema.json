{
	"$schema": "https://json-schema.org/draft/2019-09/schema",
	"$id": "http://example.com/example.json",
	"type": "object",
	"default": {},
	"title": "Root Schema",
	"required": ["steps"],
	"properties": {
		"steps": {
			"type": "array",
			"default": [],
			"title": "The steps Schema",
			"items": {
				"type": "object",
				"title": "A Schema",
				"required": ["name", "condition", "run"],
				"properties": {
					"name": {
						"type": "string",
						"title": "The name Schema",
						"examples": ["Install dependencies", "Run build"]
					},
					"condition": {
						"type": "string",
						"title": "The condition Schema",
						"examples": [
							"context.event == 'push'",
							"context.event == 'push' && env.ENABLE_DEPLOYS == 'true'"
						]
					},
					"run": {
						"type": ["array", "string"],
						"title": "The run Schema",
						"items": {
							"type": "string",
							"title": "A Schema",
							"examples": ["echo \"Starting installation\"", "npm install"]
						},
						"examples": [
							["echo \"Starting installation\"", "npm install"],
							"npm run build"
						]
					}
				},
				"examples": [
					{
						"name": "Install dependencies",
						"condition": "context.event == 'push'",
						"run": ["echo \"Starting installation\"", "npm install"]
					},
					{
						"name": "Run build",
						"condition": "context.event == 'push' && env.ENABLE_DEPLOYS == 'true'",
						"run": "npm run build"
					}
				]
			},
			"examples": [
				[
					{
						"name": "Install dependencies",
						"condition": "context.event == 'push'",
						"run": ["echo \"Starting installation\"", "npm install"]
					},
					{
						"name": "Run build",
						"condition": "context.event == 'push' && env.ENABLE_DEPLOYS == 'true'",
						"run": "npm run build"
					}
				]
			]
		}
	},
	"examples": [
		{
			"steps": [
				{
					"name": "Install dependencies",
					"condition": "context.event == 'push'",
					"run": ["echo \"Starting installation\"", "npm install"]
				},
				{
					"name": "Run build",
					"condition": "context.event == 'push' && env.ENABLE_DEPLOYS == 'true'",
					"run": "npm run build"
				}
			]
		}
	]
}
